{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "rootDir": "./src",
    "outDir": "./dist",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": false,
    "resolveJsonModule": true,

    "sourceMap": true,

    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
